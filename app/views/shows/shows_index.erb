<h2>Upcoming Shows</h2>

<table>
  <tr>
  <% @shows.each do |show| %>
    <td><%= show.date.to_date.strftime("%m.%d") %></td>
    <td class="details">
      <% if !show.url.nil? %>
        <a href="<%= show.url %>">
      <% end %>
      <%= show.artists.collect { |artist| artist.name }.join(" + ") %> at <%= show.venue.name %>
        </a>
    </td>
  </tr>
  <% end %>
</table>
