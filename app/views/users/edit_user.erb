<h2>Edit User</h2>

<form method="POST" action="/settings">
<input id="hidden" type="hidden" name="_method" value="patch">

  <p>Username: <input type="text" name="username" value="<%= current_user.username %>" autocomplete="off" required /></p>

  <p>Email: <input type="email" name="email" value="<%= current_user.email %>" autocomplete="off" required /></p>

  <p>Enter Password to Make Changes: <input type="password" name="password" required /></p>

  <input type="submit" value="SUBMIT" />
</form>

<form method="POST" action="/">
  <h2>Change Password</h2>

  <p>Old Password: <input type="password" name="old_password" required /></p>

  <p>New Password: <input type="password" name="password" required /></p>

  <p>Confirm New Password: <input type="password" name="confirm_password" required /></p>
  <input type="submit" value="SUBMIT" />
</form>
