<h2><%= @artist.name %> Shows</h2>

<table>
  <tr>
  <% @artist.shows.order(:date).each do |show| %>
    <td>
      <% if logged_in? %>
      <a href="/shows/<%= show.id %>">
      <% end %>
      <%= show.date.to_date.strftime("%m.%d") %>
      </a>
    </td>

    <td class="details">
      <% if !show.url.nil? %>
      <a href="<%= show.url %>">
      <% end %>
      <%= show.artists.collect { |artist| artist.name }.join(" + ") %> at <%= show.venue.name %>
      </a>
    </td>
  </tr>
  <% end %>
</table>

<% if logged_in? %>
<h3><a href="/artists/<%= @artist.slug %>/edit">Edit <%= @artist.name %></a></h3>
<% end %>
